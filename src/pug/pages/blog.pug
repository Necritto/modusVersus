extends ../layout/main

block variables
  - var title = 'MODUS versus';
  - var pageClass = 'blog-page';
  -
    var categories = [
      {name: 'logo design', class: 'logoDesign'},
      {name: 'web design', class: 'webDesign'}, 
      {name: 'photography', class: 'photography'}, 
      {name: 'wordpress', class: 'wordpress'},
      {name: 'icons', class: 'icons'}
    ];
  -
    var recentPosts = [
      {title: 'Curabitur vitae velit', date: '25 May 2013'},
      {title: 'Vivamus at elit quis urna adipiscing iaculis', date: '25 May 2013'}, 
      {title: 'Curabitur vitae velit', date: '25 May 2013'}, 
      {title: 'Vivamus at elit quis urna adipiscing iaculis', date: '25 May 2013'}
    ];
  -
    var tags = [
      {value: 'Maecenas ', class: 'tags__btn'},
      {value: 'Nunc ', class: 'tags__btn'}, 
      {value: 'Praesent ', class: 'tags__btn'}
    ];
  - var count = 0;
  -
    var archive = [
      {year: 2013, class: 'y2013'},
      {year: 2012, class: 'y2012'}, 
      {year: 2011, class: 'y2011'}
    ];


block content
  main.blog-main
    +pageTitle('Blog')
    .container
      .blog-container
        section.blog-content
          .blog-item.docs
            .blog-datatype
              .blog__date
                p May
                span 26
              .blog__type
                i.far.fa-file-alt
            .blog-post
              .withoutImg
                i.far.fa-image
              h3 Duis dapibus aliquam mi, eget euismod sem scelerisque ut.
              p Posted by #[span Admin] in #[span Wordpress] #[span #[i.fas.fa-tags] Design, Template] #[span #[i.fas.fa-comments] 22]
              p Maecenas eget turpis turpis. Nunc vel metus augue. 
                |  Aenean euismod cursus ligula eget dapibus. 
                |  Praesent vel erat in tortor placerat dignissim. 
                |  Duis dapibus aliquam mi, eget euismod sem scelerisque ut. 
                |  Vivamus at elit quis urna adipiscing iaculis. Curabitur vitae velit in neque dictum blandit. 
                |  Proin in iaculis neque. Pellentesque habitant morbi tristique senectus et netus et malesuada fames ac turpis egestas.
              a(href="#") Continue reading #[i.fas.fa-arrow-right]
              //- Other post types I'll make later
        aside.blog-aside
          ul.blog__categories Categories
            for item in categories
              li(class=item.class) #[a(href='#') #[i.fas.fa-arrow-circle-right] #{item.name}]
          ul.blog__recent Recent Posts
            for item in recentPosts
              li #[a(href='#') #[i.fas.fa-angle-right] #{item.title}]
                span #{item.date}
          .blog__tags
            h3 Tags
            .tags-btns
              while count < 3
                for item in tags
                  button(class=item.class) #{item.value}
                -count++
            ul.blog__archive Archive
              for item in archive
                li(class=item.class) #[a(href='#') #[i.fas.fa-arrow-circle-right] #{item.year}]
