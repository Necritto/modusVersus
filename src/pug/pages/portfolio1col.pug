extends ../layout/main

block variables
  - var title = 'MODUS versus';
  - var pageClass = 'portfolio1-page portfolioPage';
  -
    var postContent = {
      img: false,
      header: 'Donec faucibus ultricies congue',
      descr: `
        Maecenas eget turpis turpis.
        Nunc vel metus augue.
        Aenean euismod cursus ligula eget dapibus.
        Praesent vel erat in tortor placerat dignissim.
        Duis dapibus aliquam mi, eget euismod sem scelerisque ut.
        Vivamus at elit quis urna adipiscing iaculis.
        Curabitur vitae velit in neque dictum blandit.
        Proin in iaculis neque.
        Pellentesque habitant morbi tristique senectus et netus et malesuada fames ac turpis egestas.`,
      link: 'www.project.dom',
      };
  - var postOnPage = 4;
  - var pageCounter = 12; // as in the layout

block content
  main.portfolio1-main
    +pageTitle('Portfolio')
    section.portfolio-posts
      .container
        .portfolio
          .portfolio-btns
            for item in ['all', 'web design', 'logo design', 'photography', 'wordpress']
              button.portfolio-btn__item=item
          .portfolio-post-block
            //- - for (var i = 0; i < postOnPage; i++)
            //-   +portfolioPost(postContent.img ,postContent.header, postContent.descr, postContent.link)
          .portfolio-post-pages
            button.prev-btn #[i.fas.fa-angle-left]
            .portfolio-pages
              - for (var j = 1; j <= pageCounter; j++)
                if (j === 6)
                  button.portfolio-pages__item #[i.fas.fa-ellipsis-h]
                else if (j > 6 && j < 10)
                  - continue;
                else
                  button.portfolio-pages__item=j
            button.next-btn #[i.fas.fa-angle-right]